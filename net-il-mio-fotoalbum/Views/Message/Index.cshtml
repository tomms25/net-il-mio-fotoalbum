@{
    ViewData["Title"] = "Messaggi";
    Layout = "/Views/Shared/_AdminLayout.cshtml";
    ViewData["messageActive"] = true;
}

<div class="container bg-light" id="menu">
    <table class="table">
        <thead>
            <tr>
                <th scope="col" class="col-2">ID</th>
                <th scope="col" class="col-3">Nome</th>
                <th scope="col" class="col-3">Messaggio</th>
            </tr>
        </thead>
        <tbody>
            <div class="row d-flex flex-wrap">
                @for (int i = 0; i < Model.Length; i++)
                {
                <tr>
                    <th class="align-middle" scope="row">@Model[i].Id</th>
                    <td class="align-middle">@Model[i].Email</td>
                    <td class="align-middle">
                            @Model[i].Text
                    </td>
                </tr>

                }
</div>
        </tbody>
    </table>
</div>